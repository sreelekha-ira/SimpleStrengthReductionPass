{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake configure",
      "type": "shell",
      "command": "cmake -S . -B build -G Ninja",
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "cmake --build build --parallel",
      "dependsOn": "cmake configure"
    }
  ]
}
